@model IEnumerable<Assignment3v2KendallBramlett.Models.MoviesActors>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Which actors are in which movies?</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<style>
    body {
        background-image: url("https://htmlcolorcodes.com/assets/images/colors/pastel-purple-color-solid-background-1920x1080.png");
        background-repeat: no-repeat;
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actors.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MoviesActorsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MoviesActorsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MoviesActorsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
